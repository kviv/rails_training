.page-header
  %h1
    Products
    %small All of the best products
  %p= link_to "Add a new product", new_product_path, :class => "btn btn-primary"

- @products.each do |product|
  .row
    .col-md-12
      %h2= product.name
      %p= product.description.crazy
      %p
        = link_to "Edit", edit_product_path(product), :class => "btn btn-default"
        = link_to "Delete", product_path(product), :method => :delete, :class => "btn btn-danger"
